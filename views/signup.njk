{% include './includes/head.njk' %}

<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">

              <h2 class="fw-bold mb-2 text-uppercase">Signup</h2>
              <p class="text-white-50 mb-5">Please enter your email and a password!</p>


              <!-- Need to add functionality to push into database-->
              <form action="/signup" onsubmit="return validate()" method="POST">

                <div class="form-outline form-white mb-4">
                  <input type="email" id="typeEmailX" class="form-control form-control-lg" placeholder="Email" name="userEmail" required/>
                  <label class="form-label" for="typeEmailX"></label>
                </div>

                <div class="form-outline form-white mb-4">
                  <input type="password" id="typePasswordX" class="form-control form-control-lg" placeholder="Password" name="userPass" required/>
                  <label class="form-label" for="typePasswordX"></label>
                </div>

                <div class="form-outline form-white mb-4">
                  <input type="password" id="typePasswordY" class="form-control form-control-lg" placeholder="Confirm Password" name="userPassConfirm" required/>
                  <label class="form-label" for="typePasswordY"></label>
                </div>


                <button class="btn btn-outline-light btn-lg px-5" type="submit">Signup</button>
              </form>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>

  function validate() {
    var email = document.getElementById('typeEmailX').value;
    var emailRGEX = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
    var emailResult = emailRGEX.test(email);
    var password = document.getElementById('typePasswordX').value;
    var passwordRGEX = /^(?=.*[0-9])(?=.*[!@#$%^&*])[a-zA-Z0-9!@#$%^&*]{6,16}$/;
    var passwordResult = passwordRGEX.test(password);
    var confirmPassword = document.getElementById('typePasswordY').value
    if(emailResult == false)
    {
      alert('Please enter a valid email address');
      return false;
    }
    if(passwordResult == false)
    {
      alert('Please enter a valid password');
      return false;
    }
    if(password != confirmPassword)
    {
      alert('Passwords do not match');
      return false;
    }
    alert('If redirected to login page, Signup successful, please login! Otherwise email is already registered!');
    return true;
  }
</script>