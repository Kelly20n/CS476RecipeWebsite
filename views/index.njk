{% include './includes/head.njk' %}
<h5 class="text-white-50 mb-5">Showing the 5 most recent recipes from each category: </h5>
{% for post in posts1 %}
<div class='postcolumn'>
    <p><a href="/view/{{post.id}}/{{post.type}}/{{post.checked}}">
    <img src="../../../image/{{post.image}}" alt="" style="width:300px;height:200px; object-fit: cover;">
    <h4 class="text-white-50 mb-5" style="overflow: hidden;">{{post.title}}</h4></a></p>
</div>
{% endfor %}
