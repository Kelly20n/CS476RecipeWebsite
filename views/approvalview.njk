{% include './includes/head.njk' %}
<style>
form { 
        display: inline-block; 
        }
</style>
<br>
<center>
    <div>
    <form action = "/remove/{{post.title}}" method ="POST">
        <input type = "submit" value = "Remove"> </input>
    </form>  
    <form action = "/approval/{{post.id}}" method ="POST">
        <input type = "submit" value = "Approve"> </input>
    </form>  
</div>
<h5 class="fw-bold mb-2">Recipe by: <u>{{post.user}}</u></h5>
<p class="fw-bold mb-2 text-uppercase">{{post.type}}</p>

<div class='postRecipeDiv'>
    <div class='postRecipe'>
        <center>
        <img src="../../../../image/{{post.image}}" alt="" style="text-align:center;width:300px;height:200px;">
        </center>
        <div><h2 style="text-align:center;" class="fw-bold mb-2 text-uppercase">{{post.title}}</h2></div><Br>
        <div><h4 class="mb-0 text-uppercase">Ingredients:</h4><br>{{post.ingredients}}</div><Br><Br>
        <div><h4 class="mb-0 text-uppercase">Instructions:</h4><br>{{post.instructions}}</div>
    </div>
</div>
</center>

