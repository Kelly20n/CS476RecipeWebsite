{# Script to hide buttons from user or show buttons based on parameters passed #}
<script>
  function checkAdmin() {
    var x = document.getElementById("admin");
    var y = document.getElementById("signout");
    var z = document.getElementById("approve");
    if({{admin.isAdmin}} === true) {
      x.style.visibility = "visible";
      z.style.visibility = "visible";
    }
    if({{admin != null}})
    {
      y.style.visibility = "visible";
      y.style.display = "block";
    }
    if({{file === false}}) {
      alert('Invalid file format, must be JPEG or PNG!')
    }
  }
  
  
</script>