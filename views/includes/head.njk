<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta http-equiv="X-UA-Compatible" content="ie=edge">
<title>Recipe Website</title>
<link rel="stylesheet" href="https://bootswatch.com/5/darkly/bootstrap.min.css">
<style>

#admin {
  visibility: hidden;
}

#signout {
  visibility: hidden;
  display: none;
}

#approve{
  visibility: hidden;
  display: none;
}

p.deleteComment{
  visibility: hidden;
  display: none;
}

{# #deletePost{
  visibility: hidden;
  display: none;
} #}

.comment {
  width: 100%
}

.commentBorder{
  border: 2px solid #333;
  width: fit-content;
}

.entry {
  border: 2px solid #333;
  border-radius: 12px;
  padding: 10px;
  width: 300px
  text-align: center;
}

.column {
  float: left;
  border: 2px solid #333;
  border-radius: 12px;
  width: 33%;
  padding: 10px;
  text-align: center;
}



.content {
  max-width: 1000px;
  border: 2px solid #333;
  border-radius: 12px;
  width: 33%;
  margin: auto;
  padding: 10px;
  text-align: center;
}

.row:after {
  content: "";
  display: table;
  clear: both;
}

div {
  font-size: 20px;
}

body {
  margin: 0;
  font-family: Arial, Helvetica, sans-serif;
}

.topnav {
  background-color: #333;
}

.topnav a {
  float: left;
  color: #f2f2f2;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}

.topnav a:hover {
  background-color: #ddd;
  color: black;
}

.topnav a.active {
  background-color: #04AA6D;
  color: white;
}

.topnavRight{
  float: right;
}


.right {
    float: right;
    width: 40%;
}
.left {
    float: left;
    width:60%;
    
}
.dropbtn {
    background-color: #04AA6D;
    color: white;
    padding: 16px;
    font-size: 16px;
    border: none;
  }
  
  .dropdown {
    position: relative;
    display: inline-block;
  }
  
  .dropdown-content {
    display: none;
    position: absolute;
    background-color: #000000;
    min-width: 300px;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index: 1;
  }
  
  .dropdown-content a {
    color: black;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
  }
  
  .dropdown-content a:hover {background-color: #ddd;}
  
  .dropdown:hover .dropdown-content {display: block;}
  
  .dropdown:hover .dropbtn {background-color: #3e8e41;}

  .center {
    text-align:center; 
    top: 50%;
    -ms-transform: translateY(+25%);
    transform: translateY(+25%);
  }
</style>

<body onload="checkAdmin()">

<div class="topnav">
  <a class="active" href="/">Home</a>
  <a id="breakfast" href="/views/breakfast">Breakfast</a>
  <a id="lunch" href="/views/lunch">Lunch</a>
  <a id="supper" href="/views/supper">Supper</a>
  <a id = "approve" href="/approval">Approval</a>
  <div class="topnavRight">
    <a id="admin" href="/admin">Admin</a>
    <a href="/postPage">Add Recipe</a>
    <a href="/login">Login</a>
    <a id="signout" href="/signout" onclick="alert('Signout Successful')">Signout</a>
    <a href="/signup">Signup</a>
  </div>
  <center>
    <div class="dropdown">
      <div class="dropdown-content"></div>
      <div class="center">
        <form action="/search" method="POST">
          <input type="radio" id="byTitle" value='title' name="searchAlgorithm">
          <label for="byTitle">Title</label></input>
          <input type="radio" id="byIngredient" value='ingredients' name="searchAlgorithm">
          <label for="byIngredients">Ingredients</label></input>
          <input type="text" placeholder="Search" name="searchTerms"/>
          <input type="submit"/>
        </form>
      </div>
    </div>
  <center>
</div>

<script>
  function checkAdmin() {
    var x = document.getElementById("admin");
    var y = document.getElementById("signout");
    var z = document.getElementById("approve");
    //var b = document.getElementById("deletePost");
    if({{admin.isAdmin}} === true) {
      x.style.visibility = "visible";
      z.style.visibility = "visible";
      z.style.display = "block";
     // b.style.visibility = "visible";
      //b.style.display = "block";
    }
    if({{admin != null}}) {
      y.style.visibility = "visible";
      y.style.display = "block";
    }
    if({{file === false}}) {
      alert('Invalid file format, must be JPEG or PNG!')
    }
  }
</script>