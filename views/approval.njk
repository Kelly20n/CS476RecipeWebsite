{% include './includes/head.njk' %}

<style>
    form { 
        display: inline-block; 
        }
    a {
        font-size: 25px;
    }
</style>
   
    <div class='content'>
    <h1><b><u>Posts</b></u></h1>
{% for post in posts %}
    
        <form action = "/remove/{{post.title}}" method ="POST">
            <a href="/approvalview/{{post.id}}/{{post.type}}/{{post.checked}}"> {{post.title}}</a>
            <input type = "submit" value = "Remove"> </input>
        </form>  
        <form action = "/approval/{{post.id}}" method ="POST">
            <input type = "submit" value = "Approve"> </input>
        </form>  
        <br></br>
{% endfor %}