{% include './includes/head.njk' %}

<div class='recipe'>
    <div>{{post.title}}</div><br><Br>
    <div>Ingredients:<br><Br>{{post.ingredients}}</div><br><Br>
    <div>Instructions:<br><Br>{{post.instructions}}</div><br><Br>
</div>

<div class='comment'>
    <div>Comments</div>
    <form action="/view/{{post.id}}/{{post.type}}/{{post.checked}}" onsubmit="return loginValidate()" method="POST">
        <div>
            <textarea placeholder="Add a Comment" name="userComment"></textarea>
            <input type="submit"/>
        </div>
    </form>
    
    {% for comment in comments %}
    <div class='comment'>
        <!-- Add for discrete Admin buttons Figure out functionality later <div id="adminButtons"> <input type="button" value="Sus"> </div>-->
        <div> {{comment.commentBody}} </div> <div>Commented By: {{comment.user}}</div><br><Br>
    </div>

    {% endfor %}
    
    
</div>

<script>
    function loginValidate() {
        if(admin == '') {
            alert('Sign in to access this feature!')
            return false;
        }
        else return true;
    }
</script>